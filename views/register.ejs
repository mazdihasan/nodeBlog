<%- include('header') %> 
<div class="wrapper">
    <div class="inner col-md-6">
        <%- include('messages') %>                        
    </div>
    <div class="inner">
        
        <img src="/includes/images/image-1.png" alt="" class="image-1">
        <form class="registration" action="/users/register" method="POST">

            <h3>New Account?</h3>
            <div class="form-holder">
                <span class="lnr lnr-user"></span>
                <input type="text" name="name" class="form-control" placeholder="Name" value="<%= typeof name != 'undefined' ? name : ''  %>" >
            </div>
            <div class="form-holder">
                <span class="lnr lnr-phone-handset"></span>
                <input type="text" name="phone" class="form-control" placeholder="Phone Number" value="<%= typeof phone != 'undefined' ? phone : ''  %>" >
            </div>
            <div class="form-holder">
                <span class="lnr lnr-envelope"></span>
                <input type="text" name="email" class="form-control" placeholder="Mail" value="<%= typeof email != 'undefined' ? email : ''  %>" >
            </div>
            <div class="form-holder">
                <span class="lnr lnr-lock"></span>
                <input type="password" name="password" class="form-control" placeholder="Password" value="<%= typeof password != 'undefined' ? password : ''  %>">
            </div>
            <div class="form-holder">
                <span class="lnr lnr-lock"></span>
                <input type="password" name="password2" class="form-control" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : ''  %>">
            </div>
            <button class="reg-button">
                <span>Register</span>
            </button>

            <div class="text-center w-full mt-4">
                <a class="reg btn primary" href="/users/login">
                    Login
                    <i class="fa fa-long-arrow-right"></i>	
               </a>
            </div>
        </form>
        <img src="/includes/images/image-2.png" alt="" class="image-2">

       
       
       
       
       
       

    </div>
</div>

<%- include('footer') %> 